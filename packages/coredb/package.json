{
  "name": "@refref/coredb",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    }
  },
  "scripts": {
    "db:generate": "infisical run --env=dev -- drizzle-kit generate",
    "db:migrate": "infisical run --env=dev -- drizzle-kit migrate",
    "db:push": "infisical run --env=dev -- drizzle-kit push",
    "db:studio": "infisical run --env=dev -- drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@refref/id": "workspace:*",
    "@refref/types": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@refref/typescript-config": "workspace:*",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
