# RefRef Webapp Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# Database Configuration (REQUIRED)
# PostgreSQL connection string
# For Docker: use the default below
# For local: update with your PostgreSQL credentials
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/refref"

# Authentication (REQUIRED)
# Generate a secure secret with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production"

# Authentication URL (OPTIONAL)
# The URL where Better Auth is hosted (defaults to http://localhost:3000)
BETTER_AUTH_URL="http://localhost:3000"

# Application URL (OPTIONAL)
# The public URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (OPTIONAL)
# Required only if you want to enable Google sign-in
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Email Provider - Resend (OPTIONAL)
# Required only if you want to send emails
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=""

# Referral Program Configuration (OPTIONAL)
# These are used if you want to dogfood RefRef for your own referral program
# Leave these empty to run without the referral widget
# REFERRAL_PROGRAM_CLIENT_ID=""
# REFERRAL_PROGRAM_CLIENT_SECRET=""
# NEXT_PUBLIC_REFREF_PRODUCT_ID=""
# NEXT_PUBLIC_REFREF_PROGRAM_ID=""

# PostHog Analytics (OPTIONAL)
# Required only if you want to enable analytics and feature flags
# Get your product key from: https://posthog.com/
# Leave NEXT_PUBLIC_POSTHOG_KEY empty to disable PostHog entirely (no console errors)
# Set NEXT_PUBLIC_POSTHOG_ENABLED to false to opt out of tracking while keeping PostHog initialized
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_ENABLED="true"

# External Services (OPTIONAL)
# URL of the refer server for loading widget and attribution scripts
# In development: http://localhost:3002
# In production: your refer server URL (e.g., https://refer.yourapp.com)
NEXT_PUBLIC_REFER_URL="http://localhost:3002"
