# Test Environment Configuration
TEST_ENV=dev                    # dev|staging|prod
SKIP_WEBSERVER_START=true       # Skip auto-starting services (use if already running)
TEST_PREFIX=e2e_test_           # Prefix for all test data
CLEANUP_ON_FAILURE=false       # Clean up test data even on failure
VIDEO_ON_FAILURE=true          # Record video on test failure

# Server URLs
WEBAPP_URL=http://localhost:3000
API_URL=http://localhost:3001
REFER_URL=http://localhost:3002
ACME_URL=http://localhost:3003
ASSETS_URL=http://localhost:8787

# Database (already set up locally, will be seeded as needed)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/refref

# Test User Credentials
TEST_USER_EMAIL=e2e_test_admin@refref.ai
TEST_USER_PASSWORD=TestPassword123!

# Authentication Configuration
NEXT_PUBLIC_ENABLE_PASSWORD_AUTH=true  # Required for E2E tests
TEST_ORGANIZATION_NAME=E2E Test Organization
TEST_PRODUCT_NAME=E2E Test Product
TEST_PROGRAM_NAME=E2E Test Program

# Test Participants
REFERRER_NAME=John Doe
REFERRER_EMAIL=john.doe@example.com
REFEREE_NAME=Jane Smith
REFEREE_EMAIL=jane.smith@example.com

# Better Auth (for test user creation)
BETTER_AUTH_SECRET=test-auth-secret-for-e2e
BETTER_AUTH_URL=http://localhost:3000

# Safety Flags
DRY_RUN=false                  # Run in dry-run mode (no actual changes)
PRODUCTION_SAFE_MODE=true      # Extra safety checks for production
